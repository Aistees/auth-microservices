generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Booking {
  id          String   @id @default(uuid())
  screeningId String
  seatId      String
  userId      String
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([screeningId])
  @@index([userId])
}
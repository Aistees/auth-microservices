generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Cinemas {
  id String @id @default(uuid())
  name String
  city String
  address String
  status String
  room Rooms[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rooms {
  id String @id @default(uuid())
  name String
  capacity Int

  cinemaId String
  cinemas Cinemas @relation(fields: [cinemaId], references: [id])

  seats Seats[]
  screenings Screening[]

  @@unique([cinemaId, name])
}

model Seats {
  id String @id @default(uuid())
  row      String
  number   Int

  roomId   String
  rooms    Rooms     @relation(fields: [roomId], references: [id])

  @@unique([roomId, row, number])
}

model Screening {
  id             String   @id @default(uuid())

  roomId         String
  rooms           Rooms     @relation(fields: [roomId], references: [id])

  externalFilmId String

  startTime      DateTime
  endTime        DateTime
  price          Decimal
}